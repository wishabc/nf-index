// Installed conda path
conda = "/home/sabramov/miniconda3/envs/super-index"
outdir = "$launchDir/output"
// Metadata
samples_file = ''
index_peaks_column = "peaks_file_0.001fdr"
matrix_peaks_column = "peaks_file_0.01fdr"

// Annotations
index_dir = "${outdir}" // Used only in annotateMasterlist workflow
chrom_sizes = "/net/seq/data/genomes/human/GRCh38/noalts/GRCh38_no_alts.chrom_sizes"
genome_fasta = '/net/seq/data/genomes/human/GRCh38/noalts/GRCh38_no_alts.fa'
mappable_not_blacklist_file = '/net/seq/data2/projects/sabramov/SuperIndex/GRCh38_no_alts.K36.n150.center_sites_and_extended_blacklist.bed.gz'

gencode = "/net/seq/data2/projects/ENCODE4Plus/figures/dhs_metadata/gencode_annotation/raw_files/gencode.v49.basic.annotation.gff3.gz"
repeats = "/net/seq/data2/projects/sabramov/SuperIndex/repeats_parsed.human.bed.gz"

// Generate matrices
index_anndata = "${outdir}/zarr/index.anndata.zarr"
matrices_anndata = "${outdir}/zarr/index+matrices.anndata.zarr"
nuclear_chrom_sizes = "/net/seq/data2/projects/sabramov/SuperIndex/hotspot3/GRCh38_no_alts.nuclear.chrom_sizes"

// Normalization
vst_design_formula = '~ 0 + interaction(core_annotation, extended_annotation, drop = TRUE)'

normalization_layer = "counts" // "bg_corrected_agg_cutcounts"
dhs_mask_name = "autosomal_dhs"

// Variance partition
chunk_size = 5000
variance_partition_formula = '~ nuclear_dup_rate + SPOT3_score + nuclear_reads + alignment_quality'

// Core sets
core_set_correction_method = 'cauchy' // stouffer
core_set_n_shuffles = 1000